generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Payload {
  bpm         Int
  oxygen      Float
  temperature Float
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum Specification {
  GENERAL
  CARDIOLOGIST
  DERMATOLOGIST
  GYNECOLOGIST
  NEUROLOGIST
  ORTHOPEDIC
  PEDIATRICIAN
  PSYCHIATRIST
  SURGEON
  UROLOGIST
}

model Doctor {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  gender        Gender        @default(OTHER)
  specification Specification @default(GENERAL)
  userID        String        @unique @db.ObjectId
  user          User?         @relation(fields: [userID], references: [id])
  hospitalIDs   String[]      @default([]) @db.ObjectId
  hospitals     Hospital[]    @relation(fields: [hospitalIDs], references: [id])
  patientIDs    String[]      @default([]) @db.ObjectId
  patients      Patient[]     @relation(fields: [patientIDs], references: [id])

  @@map("doctors")
}

model Hospital {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  userID    String    @unique @db.ObjectId
  user      User?     @relation(fields: [userID], references: [id])
  doctorIDs String[]  @default([]) @db.ObjectId
  doctors   Doctor[]  @relation(fields: [doctorIDs], references: [id])
  sensors   Sensor[]
  patients  Patient[]

  @@map("hospitals")
}

model Patient {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  gender     Gender
  aadhaar    Float     @unique
  admitted   Boolean   @default(true)
  age        Int
  doctorIDs  String[]  @default([]) @db.ObjectId
  doctors    Doctor[]  @relation(fields: [doctorIDs], references: [id])
  hospitalID String    @db.ObjectId
  hospital   Hospital? @relation(fields: [hospitalID], references: [id])
  sensorID   String    @unique @db.ObjectId
  sensor     Sensor?   @relation(fields: [sensorID], references: [id])

  @@map("patients")
}

model SensorData {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  data      Payload
  timestamp DateTime @db.Date
  sensorID  String   @db.ObjectId
  sensor    Sensor?  @relation(fields: [sensorID], references: [id])

  @@index([sensorID, timestamp], map: "sensorID_1_timestamp_1")
  @@map("sensordatas")
}

model Sensor {
  id         String       @id @default(auto()) @map("_id") @db.ObjectId
  hospitalID String       @db.ObjectId
  hospital   Hospital     @relation(fields: [hospitalID], references: [id])
  patient    Patient?
  sensorData SensorData[]

  @@map("sensors")
}

model User {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  username     String    @unique
  email        String    @unique
  password     String
  name         String
  avatar       String
  isAdmin      Boolean   @default(false)
  refreshToken String?
  doctor       Doctor?
  hospital     Hospital?

  @@map("users")
}
